<%- contentFor('body') %>
    <!-- LOGIN FORM -->
        <main class="container">            
            <form class="form">
                <h1 class="form__title">INGRESAR A MI CUENTA</h1>
                <article class="form__item1">                    
                    <label class="form__text">Email:</label>
                    <input class="form__input" type="email">
                </article>
                <article class="form__item2">
                    <label class="form__text">Contraseña:</label>
                    <input class="form__input" type="password">
                </article>
                <article class="form__item3">                    
                    <button type="submit" class="form__button">Ingresar</button>
                    <div class="form__subitem">                        
                        <input id="recordarme" name="recordarme" class="form__checkbox" type="checkbox">
                        <label for="recordarme" class="form__remindme">Recordarme</label>
                    </div>
                </article>
                <a class="form__forgotpw" href="#">Olvidé mi contraseña</a>
            </form>
        </main>
